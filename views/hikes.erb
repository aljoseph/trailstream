<%rows = pagination hikes.size, 3%>
<%rows.each do |row|%>
	<div class="row"> 
		<% row.each do |i|%>
		  <% hike = hikes[i] %>
			<div class="col-md-4">
				<div class="hikeBox">
					<div class="hikeImageAndName">
						<img src="<%= hike.image_url %>">
						<span><%= hike.hike_name %></span>
					</div>
					<div class="hikeStats">
						<div class="glyphicon glyphicon-road statItem" aria-hidden="true"><%=hike.minutes_from_seattle%> min</div> 
						<div class="glyphicon glyphicon-repeat statItem" aria-hidden="true"><%=hike.roundtrip_distance%> mi</div> 
						<div class="glyphicon glyphicon-arrow-up statItem" aria-hidden="true"><%=hike.elevation_gain.to_i%> ft</div>
					</div>
				</div>
			</div>
			<% end %>
	</div>

<% end %>

<div class="row">
	<a class="btn btn-default" href="<%= "/hikes/#{page.to_i+1}" %>" role="button">Show More Matching Hikes</a>
</div>

<script>
if ( $(".hikes:last .col-md-4").length > 98 ) {
	$(".hikes:last a:last").on( "click", function(event){
		event.preventDefault();
		var url = $(".hikes:last a:last").attr("href");
		var newDiv = document.createElement("div");
		$(newDiv).addClass("container-fluid hikes");
		$(newDiv).load(url);
		$(".hikes:last a:last").remove()
		$(".hikes:last").after( $(newDiv) );
	});
}
else {
	$("a.btn").remove();
}
</script>